<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MemoryLeakTest.NewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MemoryLeakTest"
    Title="NewPage">

    <VerticalStackLayout Padding="30">
        <Button Command="{Binding NavigateBack, Source={x:Static local:AppService.NavigationManager}}" Text="Go Back with Button" />
        <Grid BackgroundColor="LightGray" HeightRequest="100">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateBack, Source={x:Static local:AppService.NavigationManager}}" />
            </Grid.GestureRecognizers>
            <Label
                HorizontalOptions="Center"
                Text="Go Back with TapGestureRecognizer"
                VerticalOptions="Center" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>